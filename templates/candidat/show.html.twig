    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ candidat.id }}</td>
            </tr>
            <tr>
                <th>NomParti</th>
                <td>{{ candidat.nomParti }}</td>
            </tr>
            <tr>
                <th>Identification</th>
                <td>{{ candidat.identification }}</td>
            </tr>
            <tr>
                <th>Cni</th>
                <td>{{ candidat.cni }}</td>
            </tr>
            <tr>
